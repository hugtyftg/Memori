{
  "name": "Memori",
  "productName": "Memori",
  "version": "0.0.0",
  "description": "AI memory based on Electron",
  "license": "MIT",
  "keywords": [],
  "main": ".vite/build/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "format": "prettier --write .",
    "lint:eslint": "eslint --cache --max-warnings 0  \"**/*.{vue,ts,tsx}\" --fix",
    "lint:stylelint": "stylelint '**/*.{css,scss,vue}' --fix",
    "lint:lint-staged": "lint-staged",
    "commit": "git cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  },
  "dependencies": {
    "@vueuse/core": "^14.0.0-alpha.0",
    "electron-squirrel-startup": "^1.0.1",
    "naive-ui": "^2.43.2",
    "pinia": "^3.0.3",
    "vfonts": "^0.0.3",
    "vue": "^3.5.17",
    "vue-i18n": "^11.1.9",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@electron-forge/cli": "7.8.1",
    "@electron-forge/maker-deb": "7.8.1",
    "@electron-forge/maker-rpm": "7.8.1",
    "@electron-forge/maker-squirrel": "7.8.1",
    "@electron-forge/maker-zip": "7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "7.8.1",
    "@electron-forge/plugin-fuses": "7.8.1",
    "@electron-forge/plugin-vite": "7.8.1",
    "@electron/fuses": "^1.8.0",
    "@iconify-json/material-symbols": "^1.2.29",
    "@iconify/vue": "^5.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^24.0.8",
    "@vitejs/plugin-vue": "^6.0.0",
    "commitizen": "^4.3.1",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.5.1",
    "electron": "37.1.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.1",
    "postcss-import": "^16.1.1",
    "postcss-scss": "^4.0.9",
    "stylelint": "^17.1.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-property-sort-order-smacss": "^11.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^18.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "unplugin-auto-import": "^20.1.0",
    "vite": "^6.0.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{cjs,json}": [
      "prettier --write"
    ],
    "*.{vue,html}": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,css}": [
      "stylelint --fix --allow-empty-input",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
