{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "useDefineForClassFields": true,

    "baseUrl": "./",
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["./common/*"],
      "@main/*": ["./main/*"],
      "@renderer/*": ["./renderer/*"],
      "@locales/*": ["./locales/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "forge.env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "preload.ts",
    "main/index.ts",
    "renderer/**/*.ts",
    "renderer/**/*.tsx",
    "renderer/**/*.vue",
    "renderer/**/*.d.ts",
    "common/**/*.ts",
    "common/**/*.tsx",
    "common/**/*.vue",
    "common/**/*.d.ts",
    "main/**/*.ts",
    "main/**/*.tsx",
    "main/**/*.vue",
    "main/**/*.d.ts"
  ]
}
